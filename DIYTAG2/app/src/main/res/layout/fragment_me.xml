<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MeFragment">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="32dp"
        android:src="@drawable/logo_diytag"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.945"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.021" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/accprofile"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:background="@color/white"
        android:padding="5dp"
        android:src="@drawable/person_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.161"
        app:shapeAppearanceOverlay="@style/circular_black"
        app:strokeColor="@color/black"
        app:strokeWidth="5dp" />

    <TextView
        android:id="@+id/Meusername"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="30dp"
        android:text="UserName"
        android:textSize="19dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/accprofile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/accprofile"
        app:layout_constraintTop_toTopOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.635" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/signoutbtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/accprofile"
        android:layout_centerInParent="true"
        android:layout_marginStart="90dp"
        android:layout_marginEnd="90dp"
        android:backgroundTint="@color/light_black"
        android:text="SIGN OUT"
        android:textColor="@color/lightgreen"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProfileText"
        app:layout_constraintVertical_bias="0.652"
        tools:ignore="TextSizeCheck" />

    <TextView
        android:id="@+id/myProfileText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.107" />

    <ImageView
        android:id="@+id/arrowprof"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_keyboard_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.107" />

    <TextView
        android:id="@+id/QrText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="My QR"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.244" />

    <ImageView
        android:id="@+id/arrowqr"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_keyboard_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.244" />

    <TextView
        android:id="@+id/rfid"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="My RFID"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.382" />

    <ImageView
        android:id="@+id/rfidarrow"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_keyboard_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.382" />

    <TextView
        android:id="@+id/pinnum"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="My PIN"
        android:textColor="@color/black"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.513" />

    <ImageView
        android:id="@+id/pinarrow"
        android:layout_width="36dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_keyboard_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.915"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accprofile"
        app:layout_constraintVertical_bias="0.513" />

</androidx.constraintlayout.widget.ConstraintLayout>
